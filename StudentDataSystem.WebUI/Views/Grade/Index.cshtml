@model List<GradeListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Profile Personal Information-->
        <div class="d-flex flex-row ">
            <!--begin::Content-->
            <!--begin::Card-->
            <div class="card card-custom card-stretch col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th scope="col">Id</th>
                            <th scope="col">Personel Adı</th>
                            <th scope="col">Ders Adı</th>
                            <th scope="col">Öğrenci adı</th>
                            <th scope="col">Vize</th>
                            <th scope="col">Final</th>
                        
                            <th scope="col">Düzenle</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>

                                <td>@item.Id</td>
                                <td>@item.PersonalName</td>
                                <td>@item.LessonName</td>
                                <td>@item.StudentName</td>
                                <td>@item.Midterm</td>
                                <td>@item.Final</td>
                         
                                <td>
                                    <a asp-controller="Student" asp-action="UpdateStudent" asp-route-id="@item.Id" class="label label-inline label-light-warning font-weight-bold cursor-pointer">
                                        Düzenle
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@item.Id" class="label label-inline label-light-danger font-weight-bold cursor-pointer">
                                        Sil
                                    </a>
                                </td>
                            </tr>


                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

